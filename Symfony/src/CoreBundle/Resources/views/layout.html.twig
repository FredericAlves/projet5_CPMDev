<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <title>{% block title %}{% endblock %} - Nos amis les oiseaux</title>
        <link href="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.4/select2.min.css" rel="stylesheet">
        <link href="//cdn.rawgit.com/t0m/select2-bootstrap-css/bootstrap3/select2-bootstrap.css" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="{{ asset('bundles/core/css/layout.css') }}"/>
        {% block stylesheet %}{% endblock %}
    </head>

    <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Dev app</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('homepage') }}">Accueil</a></li>
                    <li><a href="{{ path('addPage') }}">Participer</a></li>
                    <li><a href="{{ path('searchPage') }}">Rechercher</a></li>
                    <li><a href="{{ path('associationPage') }}">Association/Contact</a></li>
                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('adminPage') }}">Bonjour, {{ app.user.username }}</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                    {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">S'enregistrer</a></li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <header>
        <a href="{{ path('homepage') }}"><img id="logo" src="{{ asset('bundles/core/img/logo.jpg') }}" alt="logo"/></a>
        <h1 id="title">Nos amis les oiseaux</h1>
        {% if is_granted('ROLE_USER') %}
           {% if gravatar is defined and gravatar != null %}
                <a href="{{ path('adminPage') }}"><img id="userGravatar" src="{{ gravatar }}" alt="logo"/></a>
            {% elseif gravatar is defined %}
                <a href="{{ path('adminPage') }}"><img id="user" src="{{ asset('bundles/core/img/user.png') }}" alt="logo"/></a>
            {% endif %}
        {% else %}
            <a href="{{ path('fos_user_security_login') }}"><img id="user" src="{{ asset('bundles/core/img/login.png') }}" alt="logo"/></a>
        {% endif %}
    </header>
    <hr>

    <div class="container containerBody">
        {% for key, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ key }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block fos_user_content %}
        {% endblock fos_user_content %}

        {% block body %}
        {% endblock %}

        <hr>
        <footer>
            <a href="/">Retour à l'accueil</a> | <a href="{{ path('legalPage') }}">Mentions légales</a>
            {% if is_granted('ROLE_USER') or is_granted('ROLE_PRO') or is_granted('ROLE_ADMIN') %}
                | <a href="{{ path('fos_user_security_logout') }}">Se déconnecter</a>
            {% endif %}
        </footer>
    </div>

    <script src="//code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.4/select2.min.js"></script>
    {% block javascripts %}
    {% endblock %}

    </body>
</html>